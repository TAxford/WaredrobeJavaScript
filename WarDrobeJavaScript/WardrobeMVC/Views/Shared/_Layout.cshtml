<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WardrobeJS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Content/JavaScript.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Wardrobe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li onmouseover="overNText(this)" onmouseout="outNText(this)">@Html.ActionLink("Tops", "Index", "Tops")</li>
                    <li onmouseover="overNText(this)" onmouseout="outNText(this)">@Html.ActionLink("Bottems", "Index", "Bottoms")</li>
                    <li onmouseover="overNText(this)" onmouseout="outNText(this)">@Html.ActionLink("Shoes", "Index", "Shoes")</li>
                    <li onmouseover="overNText(this)" onmouseout="outNText(this)">@Html.ActionLink("Accessories", "Index", "Accessories")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p onmouseover="overText(this)" onmouseout="outText(this)">&copy; @DateTime.Now.Year - AXFORD X CO</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
